@model IEnumerable<DentalClinic.Web.Models.Review>
@{
    ViewData["Title"] = "Reviews";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
    <a class="btn btn-success" asp-action="Create">Create</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Created</th>
            <th>Rating</th>
            <th>Appointment</th>
            <th style="width: 180px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
            <td>@item.Rating</td>
            <td>
                @item.Appointment?.Date.ToString("yyyy-MM-dd")
                @item.Appointment?.Time.ToString(@"hh\:mm")
                â€” @item.Appointment?.Patient?.FullName / @item.Appointment?.Doctor?.FullName
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
