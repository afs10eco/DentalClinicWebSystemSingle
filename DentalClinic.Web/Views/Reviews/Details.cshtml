@model DentalClinic.Web.Models.Review
@{
    ViewData["Title"] = "Review Details";
}

<h1 class="h3">@ViewData["Title"]</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Created</dt><dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
    <dt class="col-sm-3">Rating</dt><dd class="col-sm-9">@Model.Rating</dd>
    <dt class="col-sm-3">Notes</dt><dd class="col-sm-9">@Model.Notes</dd>
    <dt class="col-sm-3">Appointment</dt>
    <dd class="col-sm-9">
        @Model.Appointment?.Date.ToString("yyyy-MM-dd") @Model.Appointment?.Time.ToString(@"hh\:mm")
        â€” @Model.Appointment?.Patient?.FullName / @Model.Appointment?.Doctor?.FullName / @Model.Appointment?.Treatment?.Name
    </dd>
</dl>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-secondary" asp-action="Index">Back</a>
