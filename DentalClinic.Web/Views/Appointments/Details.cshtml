@model DentalClinic.Web.Models.Appointment
@{
    ViewData["Title"] = "Appointment Details";
}

<h1 class="h3">@ViewData["Title"]</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Date</dt><dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>
    <dt class="col-sm-3">Time</dt><dd class="col-sm-9">@Model.Time.ToString(@"hh\:mm")</dd>
    <dt class="col-sm-3">Patient</dt><dd class="col-sm-9">@Model.Patient?.FullName</dd>
    <dt class="col-sm-3">Doctor</dt><dd class="col-sm-9">@Model.Doctor?.FullName</dd>
    <dt class="col-sm-3">Treatment</dt><dd class="col-sm-9">@Model.Treatment?.Name</dd>
    <dt class="col-sm-3">Notes</dt><dd class="col-sm-9">@Model.Notes</dd>
    <dt class="col-sm-3">Completed</dt><dd class="col-sm-9">@(Model.Completed ? "Yes" : "No")</dd>
    <dt class="col-sm-3">Review</dt>
    <dd class="col-sm-9">
        @if (Model.Review is null)
        {
            <span class="text-muted">None</span>
        }
        else
        {
            <a asp-controller="Reviews" asp-action="Details" asp-route-id="@Model.Review.Id">View review</a>
        }
    </dd>
</dl>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-secondary" asp-action="Index">Back</a>
